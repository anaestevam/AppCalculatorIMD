<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmento2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/tvF2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcule suas notas"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/nota01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 01"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/nota02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 02"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/nota03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 03"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/calcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Calcular" />

            <TextView
                android:id="@+id/resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:text="Situação:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_name"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="685dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>